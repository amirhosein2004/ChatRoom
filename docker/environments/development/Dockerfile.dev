# Development Dockerfile for ChatPage
# Extends base configuration with development-specific settings

FROM chatpage-base:latest

# Switch to root 
USER root

# Install development dependencies
RUN pip install --no-cache-dir -r requirements/development.txt

# Make entrypoint script executable
RUN chmod +x /app/docker/scripts/entrypoint.dev.sh

# Switch back to app user
USER appuser

# Run entrypoint script
ENTRYPOINT ["/app/docker/scripts/entrypoint.dev.sh"]
